<!doctype html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
        <link href='http://fonts.googleapis.com/css?family=Lato:300,400,700' rel='stylesheet' type='text/css'>
        <link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">
        <link rel="stylesheet" href="/css/spotify.css">
        <link href="AppIcon29x29.png" rel="icon" type="image/png" />
        <link href="AppIcon76x76.png" rel="apple-touch-icon" />
        <link href="AppIcon76x76.png" rel="apple-touch-icon" sizes="76x76" />
        <link href="AppIcon76x76@2x.png" rel="apple-touch-icon" sizes="152x152" />
        <title>Player</title>
    </head>
    <body>
        <div id="wrapper">
            <h2><i class="fa fa-search"></i> Search track</h2>
            <script type="text/x-handlebars" data-template-name="search">
                {{input value=query placeholder="Search for track..."}}
                <button {{action 'search'}}>Search</button>
                <div id="search">
                    search
                    <ul>
                        {{#each track in controller}}
                        <li>{{track.name}} {{track.artist}}</li>
                        {{/each}}
                    </ul>
                </div>
            </script>
        </div>
        <script src="/player/libs/jquery-1.10.2.js"></script>
        <script src="/player/libs/handlebars-1.1.2.js"></script>
        <script src="/player/libs/ember-1.3.1.js"></script>
        <!--script src="/player/libs/ember-data.js"></script-->
        <script src="/player/app.js"></script>
        <script src="/player/router.js"></script>
    </body>
</html>
